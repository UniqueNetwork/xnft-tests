    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "mocha": "^10.1.0",
    "mochawesome": "^7.1.3"
  },
  "devDependencies": {
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "@types/chai": "^4.3.9",
